    <![endif]-->
    <style>
        .logo-Area {
            margin-top: 50px;
            float: left;
            width: 100%;
        }

        .thankyouBlock {
            margin: 50px auto 10px auto;
            float: left;
            width: 100%;
            text-align: center;
            border: 1px solid #0676c5;
            background: #fafafa;
        }

            .thankyouBlock h2 {
                color: #0676C5;
                margin: 10px 0;
                text-transform: uppercase;
            }

            .thankyouBlock p {
                font-size: 16px;
            }

        .thankyou-container .col-sm-2 {
            float: none;
            margin-left: auto;
            margin-right: auto;
            max-width: 180px;
        }
    </style>
