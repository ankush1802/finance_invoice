
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddAccountwithKippin</title>
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    <link href="~/ThemeAssets/css/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/ThemeAssets/js/jquery-1.11.1.min.js"></script>
    <script>
        $(document).ready(function () {
            if ($("#hdnComingSoon").val != "true")
            {
                $('#ydleeFrm').submit();
            }
        
    });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            @if (ViewBag.comingSoon != "true")
            {
                <h4 class="text-danger">@ViewBag.Error</h4>
                <input id="hdnComingSoon" value="@ViewBag.comingSoon" type="hidden" />
                <div style="display:none">

                    <form target="fastLinkFrame" id="ydleeFrm" action="https://usyirestmasternode.yodleeinteractive.com/authenticate/kippin/?channelAppName=usyirestmaster" method="POST">
                        <input type="hidden" value="@ViewBag.userToken" placeholder="rsession" name="rsession">
                        <input type="hidden" value="10003600" placeholder="FinappId" name="app">
                        <input type="hidden" value="true" placeholder="true/false" name="redirectReq">
                        <input type="hidden" value="@ViewBag.Token" placeholder="token" name="token">
                        <input type="hidden" value="" placeholer="Extra Params" name="extraParams">
                        <input value="Add Account" type="submit" class="btn btn-primary pull-right custom-mar" />
                    </form>

                </div>
                <div class="col-lg-8 col-lg-offset-2">
                    <iframe src="about:blank" id="fastLinkFrame" name="fastLinkFrame" style="width:100%;height:500px;" scrolling="auto" frameborder="1"></iframe>
                </div>
            }
            else if (ViewBag.comingSoon != "false")
            {
                @*<section class="coming-soon-sec">
                    <h2>Please try again later.</h2>
                   
                </section>*@
            }
            else
            {
                <section class="coming-soon-sec">
                    <h2>We are activating this feature for you. Please try after some time.</h2>
                    <img src="~/ThemeAssets/Images/comming-soon.png" />
                </section>
            }
          
        </div>
    </div>
</body>
</html>
