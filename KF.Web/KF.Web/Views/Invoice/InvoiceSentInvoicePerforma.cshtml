@{
    ViewBag.Title = "InvoiceSentInvoicePerforma";
    Layout = "~/Views/Shared/_InvoiceLayoutPage.cshtml";
}


@section scripts{
<script src="~/ThemeAssets/js/jquery-1.11.1.min.js"></script>
    <style>
        .modal-lg {
            max-width: 1200px;
            width: 100%;
        }
    </style>

    <script>
        function goBack() {
            window.history.back();
        }
        $(document).ready(function () {
            if (window.location.href.indexOf("InvoiceSentInvoicePerforma") > -1) {
                $("#ulsubitems").css("display", "block");
                $("#litopinvoice").addClass("nav-active");
                $("#sentinvoice").addClass("active");
                $("#sentinvoice").css("color", "#1CAF9A");
            }
        });
    </script>
<link href="~/ThemeAssets/css/form-layout.css" rel="stylesheet" />
}
<!--Internal Page Header Section Start-->
@Html.Partial("~/Views/Accounting/Partials/_InternalPageHeader.cshtml",
new KF.Web.Models.InternalPageHeaderViewModel
{
    HeaderTitle = "Invoice",
    HeaderSubtitle = "SENT INVOICE/PROFORMA",
    HeaderParentPageName = "Invoice",
    HeaderChildPageName = "Sent Invoice/Proforma",
    HeaderFontAwsomeIcon = "fa-money"
})

<div id="page-wrapper">
    <div class="container">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">

                @{
                    var currentUserData = KF.Web.Models.UserData.GetCurrentInvoiceUserData();

                    long SelectedActiveUser = 0;
                    if (Request.Cookies["SelectedActiveUser"] != null)
                    {
                        if (Request.Cookies["SelectedActiveUser"].Value != null)
                        {
                            long.TryParse(Convert.ToString(Request.Cookies["SelectedActiveUser"].Value), out SelectedActiveUser);
                        }

                    }
                    if (SelectedActiveUser > 0)
                    {
                        var selectedUserData = KF.Web.Models.UserData.GetUserData(Convert.ToInt32(SelectedActiveUser));

                    }


                }


            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">

                @Html.Partial("~/Views/Shared/_PageHeaderInvoice.cshtml")
            </div>
            <div class="clearfix"></div>

        </div>
        <!-- /.row -->
        <div class="row report-section-width">
            @{
                using (Html.BeginForm("InvoiceSentInvoiceReceivedInvoicePerforma", "Invoice", FormMethod.Post))
                {

            <div class="col-sm-4">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div>SENT INVOICE</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-info" id="btnCustomer" name="Command" value="SENTINVOICE">SENT INVOICE</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div>SENT PROFORMA</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-info" id="btnSupplier" name="Command" value="SENTPROFORMA">SENT PROFORMA</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

                }

            }

        </div>

        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

